doctype
html
    head
        title= "Real time web chat Agent"
        link(rel='stylesheet', href='#{server_ip_address}/agent_css.css')
        link(rel='stylesheet', href='#{server_ip_address}/admin_css.css')
        script(src='http://code.jquery.com/jquery-2.1.1.min.js')
        script(src='#{server_ip_address}/chat_admin.js' id="g4a-chat-base-load" data-server-ip="#{server_ip_address}")
        script(src='#{server_ip_address}/socket.io/socket.io.js')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic')
    body
        .content
            img(src="#{server_ip_address}/logo.png")
            .content
                h3 ADMIN
            .agent_data_container
                form(action="/" method="post")
                    input(type="hidden" name="user_logout" value="logout")
                    button(class="olab-log-out")
                        img(src="#{server_ip_address}/olab_power.png")
                h2 AGENTES
                - var agente = agents
                each el in agente
                    div(class="agent" id="#{el.email}")
                        = el.name
        div(class="content content-clients")
            .agent_data_container
                h2 CLIENTES
        div(class="content content-conversation")
            .agent_data_container
                h2 CONVERSACIÃ“N
                .conversation-overflow
